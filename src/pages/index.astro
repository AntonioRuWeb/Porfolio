---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import GitHubIcon from "../components/icons/Github.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/email.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import ExperienceIcon from "../components/icons/ExperienceIcon.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Studies from "../components/studies.astro";
import EducationIcon from "../components/icons/book.astro";
---

<Layout title="Porfolio de AntonioRuiz.">
  <main class="px-4">
    <SectionContainer class="py-20 pb-20">
      <img
        class="rounded-full w-20 h-20 mb-3"
        src="/photoAntonio.jpg"
        alt="Antonio photo"
      />

      <h1
        id="sobre-mi"
        class="text-white text-pretty text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hola, soy Antonio Ruiz <a
          href="https://www.linkedin.com/in/antonio-ruiz-developer/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-pretty max-w-[700px]">
        Soy un <span class="text-purple-200/90"
          >desarrollador web full-stacks y Tester</span
        >. Desde que comencé en la programación, me he dedicado a
        <span class="text-yellow-200/90"
          >perfeccionar mis habilidades y explorar nuevas tecnologías</span
        > . Me encanta trabajar en equipo y enfrentar desafíos complejos que me permitan
        crecer como profesional.
      </h2>

      <nav class="flex gap-4 mt-3 flex-wrap">
        <SocialPill href="https://github.com/AntonioRuWeb">
          <GitHubIcon class="size-4 md:size-6" />GitHub
        </SocialPill>
        <SocialPill href="https://www.linkedin.com/in/antonio-ruiz-developer/">
          <LinkedInIcon class="size-4 md:size-6" />LinkedIn
        </SocialPill>
        <SocialPill href="mailto:antoniojrg20@gmail.com">
          <MailIcon class="size-4 md:size-6" />antoniojrg20@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="text-2xl font-semibold flex mb-6 gap-x-3 items-center">
        <ExperienceIcon class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>
    <SectionContainer id="estudios">
      <h2 class="text-2xl font-semibold flex mb-6 gap-x-3 items-center">
        <EducationIcon class="size-7" />
        Educación
      </h2>
      <Studies />
    </SectionContainer>
  </main>
</Layout>
